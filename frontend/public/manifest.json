{
  "name": "OVASABI Studios Platform",
  "short_name": "OVASABI",
  "description": "Advanced media processing and collaboration platform with AI-powered features",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f0f23",
  "theme_color": "#6366f1",
  "orientation": "any",
  "categories": ["productivity", "multimedia", "social"],
  "icons": [],
  "shortcuts": [
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search across all content",
      "url": "/search",
      "icons": [{ "src": "/icons/search-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Campaign Manager",
      "short_name": "Campaigns",
      "description": "Manage your campaigns",
      "url": "/campaigns",
      "icons": [{ "src": "/icons/campaign-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View performance analytics",
      "url": "/analytics",
      "icons": [{ "src": "/icons/analytics-96x96.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"],
        "video/*": [".mp4", ".webm", ".mov", ".avi"],
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "ovasabi",
      "url": "/protocol-handler?url=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 480
  },
  "scope": "/",
  "id": "ovasabi-platform",
  "launch_handler": {
    "client_mode": "navigate-new"
  }
}

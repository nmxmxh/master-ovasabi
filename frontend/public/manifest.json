{
  "name": "OVASABI Studios Platform",
  "short_name": "OVASABI",
  "description": "Advanced media processing and collaboration platform with AI-powered features",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f0f23",
  "theme_color": "#6366f1",
  "orientation": "any",
  "categories": ["productivity", "multimedia", "social"],
  "icons": [
    {
      "src": "/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Particle Demo",
      "short_name": "Particles",
      "description": "Launch WebGPU particle visualization",
      "url": "/?demo=particles",
      "icons": [{ "src": "/android-chrome-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Performance Analytics",
      "short_name": "Performance",
      "description": "View real-time performance metrics",
      "url": "/?view=performance",
      "icons": [{ "src": "/android-chrome-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "WASM Compute",
      "short_name": "Compute",
      "description": "Access WASM compute features",
      "url": "/?mode=compute",
      "icons": [{ "src": "/android-chrome-192x192.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"],
        "video/*": [".mp4", ".webm", ".mov", ".avi"],
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+ovasabi",
      "url": "/protocol-handler?url=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 480
  },
  "scope": "/",
  "id": "ovasabi-platform",
  "launch_handler": {
    "client_mode": "navigate-new"
  }
}
